<form method="POST" class='panel panel-default'>
  <h3>Send Message</h3>
    <input type="text"  name='recipient' placeholder="Recipient" value="<%= recipient or '' %>" aria-describedby="basic-addon1">
    </br>
    <input type="text"  name='subject' placeholder="Subject" aria-describedby="basic-addon1">
    </br>
    <textarea name="body" id="messagebody" rows="10" cols="50" placeholder="Message"></textarea>
    </br>
    <button class='btn btn-default' type="submit" >Send</button>
</form>
